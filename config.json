{
    "name": "Mnist_LeNet",
    "n_gpu": 0,

    "arch": {
        "type": "UNet",
        "args": {
            "n_channels":1,
            "n_classes": 1
        }
    },
    "data_loader": {
        "type": "ISBIDataLoader",
        "args":{
            "data_dir": "data/own/train/",
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "RMSprop",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "momentum": 0.9
        }
    },
    "loss": "BCEWithLogitsLoss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
